<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #E9E5F7;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.controller.DisplayArtController">

    <!-- Include Header -->
    <fx:include source="header-template.fxml" />

    <!-- Main Container VBox -->
    <Pane layoutX="100.0" layoutY="150.0" prefHeight="720.0" prefWidth="1280.0">

        <!-- Portfolio Title Label -->
        <Label fx:id="portfolioTitleLabel" styleClass="landing-title" />

        <!-- Main Content Area in a GridPane -->
        <GridPane hgap="20" vgap="20">

            <!-- ImageView for Art Image -->
            <ImageView fx:id="artImageView" fitHeight="600" fitWidth="600" preserveRatio="true" GridPane.columnIndex="0" />

            <!-- VBox for Art Information -->
            <VBox prefHeight="600" prefWidth="600" spacing="10" style="-fx-padding: 10 20 10 20;" styleClass="main-content" GridPane.columnIndex="1">
                <Label fx:id="artTitleLabel" styleClass="landing-title" text="Art Title" />
                <Label fx:id="artYearLabel" text="Year" />
                <Label fx:id="artCategoryLabel" text="Category" />
                <Label fx:id="artMediumLabel" text="Medium" />
                <Label fx:id="artMaterialLabel" text="Material" />
                <Label fx:id="artDimensionsLabel" text="Dimensions" />
                <Label fx:id="artDescriptionLabel" text="Description" wrapText="true" />
            </VBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </Pane>
    <!-- Include Footer -->
    <fx:include source="footer-template.fxml" />
</AnchorPane>
