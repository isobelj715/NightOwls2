<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.controller.UploadController" spacing="10" prefWidth="1280" prefHeight="720" stylesheets="@style.css, @login-buttons.css">

    <!-- Include Header -->
    <fx:include source="header-template.fxml"/>

    <!-- Main content section -->
    <HBox spacing="20" prefWidth="1280" prefHeight="720" stylesheets="@style.css, @login-buttons.css">
        <!-- Left section for image browsing and preview, with main-content styling -->
        <VBox spacing="10" alignment="TOP_CENTER" styleClass="main-content, upload-box" style="-fx-padding: 0 0 0 20;">
            <Label text="Upload Art:" alignment="CENTER" styleClass="landing-title"/>

            <!-- Browse Button -->
            <Button text="Browse..." onAction="#onBrowseFile" styleClass="nav-button"/>


            <!-- Add Image below the Browse button -->
            <!--
            <ImageView fitWidth="100" preserveRatio="true">
                <Image url="@img/upload-purple.png"/>
            </ImageView>
            -->

            <!-- Image preview placeholder -->
            <ImageView fx:id="imagePreview" fitWidth="300" fitHeight="300" preserveRatio="true" styleClass="image-preview"/>
        </VBox>


        <!-- Right section for form fields, also with main-content styling -->
        <VBox spacing="10" alignment="CENTER" styleClass="main-content, transparent-box" HBox.hgrow="ALWAYS">
            <GridPane hgap="20.0" vgap="10.0" alignment="CENTER" GridPane.hgrow="ALWAYS" style="-fx-padding: 20 20 20 20;">
                <!-- Column 1 -->
                <Label text="Title*:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="artTitleTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" promptText="Enter Art Title" styleClass="input-field"/>

                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="categoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" promptText="Enter Category" styleClass="input-field"/>

                <Label text="Material:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="materialTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" promptText="Enter Material" styleClass="input-field"/>

                <!-- Description field extended to fill the entire row -->
                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextArea fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3" GridPane.hgrow="ALWAYS" promptText="Enter Description" styleClass="input-field"/>

                <!-- Column 2 -->
                <Label text="Year*:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="yearTextField" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" promptText="Enter Year" styleClass="input-field"/>

                <Label text="Medium:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="mediumContainer" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" promptText="Enter Medium" styleClass="input-field"/>

                <!-- Dimensions fields stretched across the row with even spacing -->
                <Label text="Dimensions:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3" GridPane.hgrow="ALWAYS">
                    <TextField fx:id="widthTextField" promptText="Width" styleClass="input-field" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="heightTextField" promptText="Height" styleClass="input-field" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="depthTextField" promptText="Depth" styleClass="input-field" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="unitsTextField" promptText="Units" styleClass="input-field" HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- File Path display -->
                <Label text="File Path:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="3"/>
                <TextField fx:id="filePathTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="3" GridPane.hgrow="ALWAYS" promptText="Selected file path" editable="false" styleClass="input-field"/>

                <!-- Buttons for upload and cancel -->
                <HBox spacing="10.0" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="3">
                    <Button text="Cancel" onAction="#onCancel" styleClass="nav-button"/>
                    <Button text="Confirm" onAction="#onUpload" styleClass="confirm-button"/>
                </HBox>
            </GridPane>
        </VBox>
    </HBox>

    <!-- Include Footer -->
    <fx:include source="footer-template.fxml"/>

</VBox>