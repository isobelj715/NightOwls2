<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.addressbook.controller.UploadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Upload Art" style="-fx-font-size: 20px;"/>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="artTitleTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter Art Title"/>

        <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="yearTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter Year"/>

        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="categoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Enter Category"/>

        <Label text="Medium:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="mediumContainer" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Enter Medium"/>

        <Label text="Material:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="materialTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="Enter Material"/>

        <Label text="Width:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="widthTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="Enter Width"/>

        <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="heightTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" promptText="Enter Height"/>

        <Label text="Depth:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="depthTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" promptText="Enter Depth"/>

        <Label text="Units:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="unitsTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" promptText="Enter Units (e.g., cm, inches)"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextArea fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="9" promptText="Enter Description"/>

        <!-- File selection section -->
        <Label text="Select Art File:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
        <Button text="Browse..." onAction="#onBrowseFile" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

        <!-- Display selected file path -->
        <TextField fx:id="filePathTextField" GridPane.columnIndex="1" GridPane.rowIndex="11" promptText="Selected file path" editable="false"/>
    </GridPane>

    <HBox spacing="10.0" alignment="CENTER">
        <Button text="Upload Art" onAction="#onUpload"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>