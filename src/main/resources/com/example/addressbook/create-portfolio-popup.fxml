<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane
        fx:controller="com.example.addressbook.controller.CreatePortfolioController"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        alignment="CENTER"
        hgap="10" vgap="10"
        style="-fx-padding: 20;">

    <Label text="Portfolio Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="portfolioNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="portfolioDescriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Create" onAction="#onCreate" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
</GridPane>